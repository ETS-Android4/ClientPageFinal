<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:hint="date"
        android:textSize="20dp"
        android:id="@+id/TV_date"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/name_img" />

        <TextView
            android:id="@+id/TV_fullNameC"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edit_text"
            android:hint="full name"
            android:inputType="text"
            android:textColor="@color/Black"
            android:padding="10dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/phone_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/phone_img"

            />

        <TextView
            android:id="@+id/TV_phoneC"
            android:layout_width="290dp"
            android:layout_height="46dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edit_text"
            android:hint="@string/telephone"
            android:textColor="@color/Black"
            android:inputType="phone"
            android:padding="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/problem_img"

            />

        <TextView
            android:id="@+id/TV_problemC"
            android:layout_width="290dp"
            android:layout_height="46dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edit_text"
            android:textColor="@color/Black"
            android:hint="problem"
            android:padding="10dp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/ET_priceC"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:hint="Price"
        android:padding="10dp"
        android:textColor="@color/Black"
        android:layout_marginStart="84dp"
        android:inputType="numberDecimal"
        android:background="@drawable/edit_text"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/model_dev_img"

            />
        <TextView
            android:id="@+id/TV_nameDeviceC"
            android:layout_width="150dp"
            android:layout_height="46dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:textColor="@color/Black"
            android:hint="@string/nameDevice"
            android:paddingStart="15dp"
            android:inputType="text"/>

        <TextView
            android:id="@+id/TV_modelDeviceC"
            android:layout_width="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_height="46dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:layout_marginStart="5dp"
            android:background="@drawable/edit_text"
            android:hint="@string/deviceModel"
            android:paddingStart="15dp"
            android:inputType="text"/>

    </LinearLayout>

    <EditText
        android:id="@+id/ET_cashNum"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:hint="Cash Num"
        android:padding="10dp"
        android:textColor="@color/Black"
        android:layout_marginStart="84dp"
        android:inputType="numberDecimal"
        android:background="@drawable/edit_text"
        />



    <Spinner
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:id="@+id/spinner_worker"
        android:autofillHints="Worker"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/Black"
        android:layout_marginStart="15dp">
    </Spinner>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/fix"
        android:id="@+id/CB_fixC"
        android:checked="true"
        android:layout_marginStart="30dp"/>

    <Button
        android:id="@+id/BTN_saveC"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_bkg"
        android:text="@string/save"
        android:textColor="@color/White"
        android:textSize="20dp" />
</LinearLayout>


